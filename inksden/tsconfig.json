{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES6",
      "ESNext",
    ],
    "allowJs": false,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "rootDir": "src",
    "declarationDir": "lib",
    "outDir": "lib",
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "src/**/*",
    "src/**/**/*",
    "src/**/**/**/*",
    "src/widgets/*",
    "src/core/*",
    "src/core/**/*",
    "src/enums/*",
    "src/interfaces/*",
  ]
}